# Database Configuration
# PostgreSQL connection string
APP_DATABASE_URL=postgresql://app_template_user:app-template_password@localhost:5433/app_template_db

# Server Configuration
PORT=3001
NODE_ENV=production

# Logging
LOG_LEVEL=info

# Optional: Database Pool Configuration
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# Optional: CORS Configuration (if needed)
# CORS_ORIGIN=http://localhost:3001

# Optional: JWT Secret (if authentication is added)
# JWT_SECRET=your-super-secret-jwt-key-here

# Optional: API Keys (if external services are added)
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key

# Optional: Redis (if caching is added)
# REDIS_URL=redis://localhost:6379

# Optional: Email Configuration (if email features are added)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
